<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IFood" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/app_brown_1</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>
        <!-- Navigation Bar Color -->
        <item name="android:navigationBarColor">@color/black</item>
    </style>


    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="borderWidth">3dp</item>
    </style>

    //Alert Dialog
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    //Search Bar
    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Text Size -->
        <item name="android:textSize">18sp</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/app_brown_1</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/black</item>
        <item name="android:background">@color/app_brown_2</item>
    </style>

    <style name="Theme.IFood.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.IFood.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.IFood.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>